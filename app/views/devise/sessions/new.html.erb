<section>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0 scale-125">
      <%= image_tag("AppLogo.png", :alt => "logo", class: "w-48 m-3") %>
      <div class="w-full rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 bg-blue-600">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-white text-xl font-bold leading-tight tracking-tight md:text-2xl ">
                  Admin Login
              </h1>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "space-y-4 md:space-y-6"}) do |f| %>
                  <div class="field">
                    <%= f.label :email, class: "text-white block text-sm font-medium"  %><br />
                    <%= f.email_field :email, autofocus: true, placeholder: 'Your admin email', autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5" %>
                  </div>

                  <div class="field">
                    <%= f.label :password, 'Senha' ,class: "text-white block text-sm font-medium" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Your admin password', class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5" %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Entrar", class: "w-full text-white font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-orange-500 hover:bg-orange-600 " %>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
</section>